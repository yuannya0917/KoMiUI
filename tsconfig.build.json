{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./build",
        "module": "esnext",
        "target": "es5",
        "declaration": true,
        "jsx":"react-jsx",
         "types": ["react", "react-dom"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },

    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx"
    ]
}